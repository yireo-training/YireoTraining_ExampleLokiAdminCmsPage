<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <update handle="loki_admin_components_grid"/>

    <head>
        <title>YireoTraining ExampleLokiAdminCmsPage</title>
    </head>

    <body>
        <referenceContainer name="content">
            <block
                name="loki_admin_cms_page.grid"
                template="Loki_AdminComponents::grid.phtml">
                <arguments>
                    <argument name="namespace" xsi:type="string">cms_page_listing</argument>
                    <argument name="provider" xsi:type="string">Magento\Cms\Model\PageRepository</argument>
                    <argument name="searchable_fields" xsi:type="array">
                        <item name="identifier" xsi:type="string">identifier</item>
                        <item name="title" xsi:type="string">title</item>
                    </argument>
                    <argument name="button_actions" xsi:type="array">
                        <item name="new" xsi:type="array">
                            <item name="method" xsi:type="string">newAction</item>
                            <item name="label" xsi:type="string">Add New Page</item>
                            <item name="primary" xsi:type="boolean">true</item>
                        </item>
                    </argument>
                    <argument name="columns" xsi:type="array">
                        <item name="page_id" xsi:type="array">
                            <item name="label" xsi:type="string">ID</item>
                        </item>
                        <item name="identifier" xsi:type="array">
                            <item name="label" xsi:type="string">URL Key</item>
                        </item>
                        <item name="is_active" xsi:type="array">
                            <item name="label" xsi:type="string">Status</item>
                            <item name="cell_template" xsi:type="string">Loki_AdminComponents::grid/cell/status.phtml</item>
                        </item>
                        <item name="store_id" xsi:type="array">
                            <item name="label" xsi:type="string">Store View</item>
                            <item name="cell_template" xsi:type="string">Loki_AdminComponents::grid/cell/store_id.phtml</item>
                        </item>
                        <item name="creation_time" xsi:type="array">
                            <item name="label" xsi:type="string">Created</item>
                        </item>
                        <item name="update_time" xsi:type="array">
                            <item name="label" xsi:type="string">Modified</item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
